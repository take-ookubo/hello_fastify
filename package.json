{
  "scripts": {
    "prepare": "husky install",
    "build": "tsc -p tsconfig.json",
    "dev-comment": "--exit-child がないと再読み込みされない",
    "dev": "ts-node-dev --exit-child src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --runInBand src"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "fastify": "^3.29.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.6.2",
    "prisma": "^3.14.0",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0"
  }
}
